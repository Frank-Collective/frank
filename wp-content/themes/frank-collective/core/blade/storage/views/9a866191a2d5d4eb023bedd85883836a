<?php if(get_field('section_title')): ?>
<div class="grid">
    <div class="col-sm-7 col-md-5">
        <div data-big-header>
        <h2><?php echo  get_field('section_title') ; ?></h2>
        </div>
    </div>
</div>
<?php endif; ?>
<?php if(get_field('sections')): ?>
    <?php foreach((array)get_field('sections') as $index => $sections): ?>
        <?php if($sections['clickable']): ?>
            <div class="row" id="service-<?php echo  $index ; ?>">
                <div class="grid text-row">
                    <div class="col-sm-4 col-md-3 title-col">
                        <?php if($sections['header']): ?>
                            <div data-appear-text>
                                <h3><?php echo  $sections['header'] ; ?></h3>
                            </div>
                        <?php endif; ?>
                        <?php if($sections['links']): ?>
                            <div data-appear-text>
                            <ul class="links">
                                <?php foreach((array) $sections['links'] as $link): ?>
                                    <li><?php echo view('partials/link', ['button' => $link['link-u']])->with(get_defined_vars())->render(); ?></li>
                                <?php endforeach; ?>
                            </ul>
                            </div>
                        <?php endif; ?>
                    </div>
                    <?php if($sections['content']): ?>
                    <div class="col-sm-9 col-md-6">
                        <div data-appear-text>
                        <?php echo  $sections['content'] ; ?>
                        </div>
                    </div>
                    <?php endif; ?>
                </div>
                <?php if($sections['images']): ?>
                    <?php
                    $slides = [];
                    foreach ((array)$sections['images'] as $slide){
                        $slides[] = ['title' => $slide['caption'], 'image' => helper::imageURL($slide['image'], 'full')];
                    }
                    $slideshow = [
                        'title' => $sections['images'][0]['caption'],
                        'slides' => $slides
                    ];
                    ?>
                    <div data-appear-text>
                    <?php echo view('partials/slideshow', ['data' => compact('slideshow')])->with(get_defined_vars())->render(); ?>
                    </div>
                <?php endif; ?>
            </div>
            <?php if($sections['enable_quote'] && ($sections['quote'] || $sections['quote_name'])): ?>
            <div data-appear-text>
            <div class="testimonial-block">
                <div class="grid">
                    <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
                        <blockquote>
                            <?php if($sections['quote']): ?>
                            <q><?php echo  $sections['quote'] ; ?></q>
                            <?php endif; ?>
                            <?php if($sections['quote_name']): ?>
                            <cite><?php echo  $sections['quote_name'] ; ?></cite>
                            <?php endif; ?>
                        </blockquote>
                    </div>
                </div>
            </div>
            </div>
            <?php endif; ?>
        <?php endif; ?>
    <?php endforeach; ?>
<?php endif; ?>