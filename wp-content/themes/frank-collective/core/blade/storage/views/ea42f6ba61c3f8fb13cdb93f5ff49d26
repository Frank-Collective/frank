                <ul class="links">
                    <?php foreach((array) get_field('sap_items', 'options') as $item): ?>
                    <li>
                        <?php if($item['type'] !== 'text'): ?>
                        <a href="<?php echo  $item['link'] ; ?>" class="link-u <?php echo  $item['type'] === 'email' ? 'email' : false ; ?>" <?php echo  $item['type'] === 'link' ? 'target="_blank"' : false ; ?>>
                        <?php endif; ?>
                            <?php echo  $item['label'] ; ?>
                        <?php if($item['type'] !== 'text'): ?>
                        </a>
                        <?php endif; ?>
                    </li>
                    <?php endforeach; ?>
                </ul>
                <?php endif; ?>
            </div>
            <?php endif; ?>
            <?php if(get_field('footer_addresses', 'options')): ?>
                <?php foreach((array) get_field('footer_addresses', 'options') as $address): ?>
                    <div class="col-xs-6 col-sm-2 col">
                        <?php if($address['title']): ?>
                        <h5><?php echo  $address['title'] ; ?></h5>
                        <?php endif; ?>
                        <?php if($address['lines']): ?>
                        <address>
                            <?php if($address['google_map_link']): ?>
                                <a href="<?php echo  $address['google_map_link'] ; ?>" target="_blank">
                            <?php endif; ?>
                            <?php foreach((array) $address['lines'] as $index => $line): ?>
                                <?php if($index > 0): ?>
                                    <br/>
                                <?php endif; ?>
                                <?php echo  $line['line'] ; ?>
                            <?php endforeach; ?>
                            <?php if($address['google_map_link']): ?>
                                </a>
                            <?php endif; ?>
                        </address>
                        <?php endif; ?>
                        <?php if($address['phone']): ?>
                            <a href="tel:<?php echo  $address['phone'] ; ?>"><?php echo  $address['phone'] ; ?></a>
                        <?php endif; ?>
