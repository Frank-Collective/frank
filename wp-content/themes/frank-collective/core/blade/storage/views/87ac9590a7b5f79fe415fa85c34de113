            <div class="container">
                <div class="grid">
                    <?php if(get_field('tagline')): ?>
                        <div class="tag-line" data-big-header>
                            <h1><?php echo  get_field('tagline') ; ?></h1>
                        </div>
                    <?php endif; ?>
                </div>
                <div class="grid">
                    <div class="col-sm-3">
                        <?php if(get_field('brand_name')): ?>
                            <div data-appear-text>
                                <h3><?php echo  get_field('brand_name') ; ?></h3>
                            </div>
                        <?php endif; ?>
                    </div>
                    <div class="col-md-5 col-sm-6">
                        <?php if(get_field('intro_text')): ?>
                        <div data-appear-text>
                        <?php echo  get_field('intro_text') ; ?>
                        </div>
                        <?php endif; ?>
                        <?php
                            $servicesList = [];
                            if(get_field('services_list') === 'categories') {
                                $term_obj_list = get_the_terms( get_the_ID(), 'service' );
                                if(!empty($term_obj_list)){
                                    $servicesList[] = ['slug' => false, 'label' => $term_obj_list->name];
                                }
                            } else {
                                if(get_field('sections')){
                                    $term_obj_list = get_field('sections');
                                    foreach ($term_obj_list as $index => $item){
                                        if($item['nav_menu_title']){
                                            $servicesList[] = ['slug' => ($item['clickable']) ? 'service-'.$index : false, 'label' => $item['nav_menu_title']];
                                        }
                                    }
                                }
                            }
                        ?>
                        <?php if(count($servicesList) > 0): ?>
                        <?php
                            $servicesList = array_chunk($servicesList, 3);
                        ?>
                        <div data-appear-text>
                            <h4>Services</h4>
                            <div class="grid info-lists">
                                <?php foreach($servicesList as $items): ?>
                                <div class="col-xs-6">
                                    <ul class="info-list">
                                        <?php foreach($items as $item): ?>
                                        <li>
                                            <?php if($item['slug']): ?>
                                            <a href="#<?php echo $item['slug']; ?>">
                                            <?php endif; ?>
                                                <?php echo  $item['label'] ; ?>
                                            <?php if($item['slug']): ?>
                                            </a>
                                            <?php endif; ?>
                                        </li>
                                        <?php endforeach; ?>
                                    </ul>
                                </div>
                                <?php endforeach; ?>
                            </div>
                        </div>
                        <?php endif; ?>
                    </div>
                    <div class="col-md-offset-1 col-sm-3">
                        <?php if(get_field('website')): ?>
                        <div data-appear-text>
                            <h4>Visit Site</h4>
                            <a href="<?php echo  get_field('website_url') ; ?>" class="link-u"><?php echo  get_field('website') ; ?></a>
                        </div>
                        <?php endif; ?>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="case-study-content default-content">
        <div class="container">
            <?php if(get_field('content_type') === 'images'): ?>
                <?php echo view('partials/case-study/images-list')->with(get_defined_vars())->render(); ?>
            <?php else: ?>
                <?php echo view('partials/case-study/sections')->with(get_defined_vars())->render(); ?>
            <?php endif; ?>
