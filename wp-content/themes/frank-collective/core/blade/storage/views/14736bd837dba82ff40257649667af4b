<?php if($section['media_items']): ?>
<div class="case-banner-wrap <?php echo  !empty($section['decorations']) ? 'with-decor' : false ; ?>" <?php echo  ($section['navigation_color'] === 'light') ? 'data-dark' : false ; ?>>
    <?php foreach((array)$section['media_items'] as $item): ?>
        <?php if($item['type'] === 'image'): ?>
            <?php if($item['image']): ?>
                <?php if($item['has_mobile_variant']): ?>
                    <div class="case-banner ch-auto cw-<?php echo  $item['width'] ; ?>" data-appear-fade-in>
                        <picture>
                            <?php if($item['mobile_image']): ?>
                                <source media="(max-width: 767px)" srcset="<?php echo  helper::imageURL($item['mobile_image'], 'full') ; ?>"/>
                            <?php endif; ?>
                                <?php echo  helper::image($item['image'], 'full') ; ?>
                        </picture>
                    </div>
                <?php else: ?>
                    <?php if($item['height'] === 'auto'): ?>
                        <div class="case-banner cw-<?php echo  $item['width'] ; ?>" data-appear-fade-in>
                            <?php echo  helper::image($item['image'], 'full') ; ?>
                        </div>
                    <?php else: ?>
                        <div class="case-banner ch-<?php echo  $item['height'] ; ?> cw-<?php echo  $item['width'] ; ?>" style="background-image: url('<?php echo  helper::imageURL($item['image'], 'full') ; ?>');" data-appear-fade-in></div>
                    <?php endif; ?>
                <?php endif; ?>
            <?php endif; ?>
        <?php endif; ?>

        <?php if($item['type'] === 'video'): ?>
            <?php if($item['video']): ?>
                <?php if($item['has_mobile_variant'] && $item['mobile_video']): ?>
                <div class="case-banner ch-auto cw-<?php echo  $item['width'] ; ?>" data-appear-fade-in>
                    <video autoplay muted loop playsinline class="video video-has-mobile" data-video-src="<?php echo  $item['video'] ; ?>" data-mobile-video-src="<?php echo  $item['mobile_video'] ; ?>"></video>
                </div>
                <?php else: ?>
                <div class="case-banner ch-<?php echo  $item['height'] ; ?> cw-<?php echo  $item['width'] ; ?>" data-appear-fade-in>
                    <video autoplay muted loop playsinline class="video">
                        <source src="<?php echo  $item['video'] ; ?>" type="video/mp4">
                    </video>
                </div>
                <?php endif; ?>
            <?php endif; ?>
        <?php endif; ?>
    <?php endforeach; ?>
    <?php if($section['decorations']): ?>
        <?php foreach((array) $section['decorations'] as $decor): ?>
            <div class="decor decor-<?php echo  $decor['position'] ; ?>">
                <div data-appear-text>
                    <?php echo view('partials/image', ['image' => $decor['image']])->with(get_defined_vars())->render(); ?>
                </div>
            </div>
        <?php endforeach; ?>
    <?php endif; ?>
</div>
<?php endif; ?>