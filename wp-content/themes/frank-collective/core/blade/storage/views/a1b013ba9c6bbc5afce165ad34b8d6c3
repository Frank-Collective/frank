<div class="cta-row">
    <div class="container">
        <div class="grid-flex">
            <?php if(get_field('next_case_study')): ?>
            <div class="col-sm-6 case-col">
                <div class="cta case-cta">
	                <?php
	                $options = array(
		                'post_type' => 'work',
		                'orderby' => 'post__in',
		                'post__in' => [get_field('next_case_study')]
	                );
	                $team = new WP_Query( $options );
	                while( $team->have_posts() ) : $team->the_post();
	                ?>
                        <a href="<?php echo  get_permalink() ; ?>">
                            <div class="bg-img" style='background-image: url(<?php echo  helper::imageURL(get_field('main_image'), 'full') ; ?>);'></div>
                            <?php if(get_field('brand_name')): ?>
                            <h2><?php echo  get_field('brand_name') ; ?></h2>
                            <?php endif; ?>
                            <p><span class="link-u">View Case Study</span></p>
                        </a>
	                <?php
	                endwhile;
	                wp_reset_postdata();
	                ?>
                </div>
            </div>
            <?php endif; ?>
            <div class="col-sm-<?php echo  get_field('next_case_study') ? '6' : '12' ; ?>">
                <?php
                    $button = get_field('cta_contacts_button', 'options');
	                $link = $button['type'] == 'internal'
		                ? $button['internal_link']
		                : $button['external_link'];
                ?>
                <a class="cta contact-cta" href="<?php echo  $link ; ?>">
                    <?php if(get_field('cta_contacts_title', 'options')): ?>
                        <h2><?php echo  get_field('cta_contacts_title', 'options') ; ?></h2>
                    <?php endif; ?>
                    <?php if(get_field('cta_contacts_button', 'options')): ?>
                        <p>
                            <span class="link-u"><?php echo  $button['label'] ; ?></span>
                        </p>
                    <?php endif; ?>
                </a>
            </div>
        </div>
    </div>
</div>