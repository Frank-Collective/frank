<div class="case-related">
    <div class="container">
        <div class="back">
            <a href="/work/"><i class="icon-left-arrow"></i>Back to Work</a>
        </div>
        <?php if(get_field('next_case_study') || get_field('prev_case_study') ): ?>
            <div class="grid-flex"  data-appear-block>
                <?php if(get_field('prev_case_study')): ?>
                <div class="col-sm-6 case-col">
                    <div class="cta case-cta">
	                    <?php
	                    $options = array(
		                    'post_type' => 'work',
		                    'orderby' => 'post__in',
		                    'post__in' => [get_field('prev_case_study')]
	                    );
	                    $team = new WP_Query( $options );
	                    while( $team->have_posts() ) : $team->the_post();
	                    ?>
                        <a href="<?php echo  get_permalink() ; ?>" class="case-card ajax-load" data-image="<?php echo  helper::imageURL(get_field('main_image'), 'full') ; ?>" data-transition-out="related_case_out">
                            <div class="bg-img" style='background-image: url(<?php echo  helper::imageURL(get_field('main_image'), 'full') ; ?>);'></div>
                            <?php if(get_field('brand_name')): ?>
                                <h2></h2>
                            <?php endif; ?>
                            <div class="body">
                                <span class="subtitle"><?php echo  get_field('brand_name') ; ?></span>
                                <h3><?php echo  get_field('tagline') ; ?></h3>
                            </div>
                        </a>
	                    <?php
	                    endwhile;
	                    wp_reset_postdata();
	                    ?>
                    </div>
                </div>
                <?php endif; ?>

                <?php if(get_field('next_case_study')): ?>
                    <div class="col-sm-6 case-col">
                        <div class="cta case-cta">
                            <?php
                            $options = array(
                                'post_type' => 'work',
                                'orderby' => 'post__in',
                                'post__in' => [get_field('next_case_study')]
                            );
                            $team = new WP_Query( $options );
                            while( $team->have_posts() ) : $team->the_post();
                            ?>
                            <a href="<?php echo  get_permalink() ; ?>" class="case-card ajax-load" data-image="<?php echo  helper::imageURL(get_field('main_image'), 'full') ; ?>" data-transition-out="related_case_out">
                                <div class="bg-img" style='background-image: url(<?php echo  helper::imageURL(get_field('main_image'), 'full') ; ?>);'></div>
                                <?php if(get_field('brand_name')): ?>
                                    <h2></h2>
                                <?php endif; ?>
                                <div class="body">
                                    <span class="subtitle"><?php echo  get_field('brand_name') ; ?></span>
                                    <h3><?php echo  get_field('tagline') ; ?></h3>
                                </div>
                            </a>
                            <?php
                            endwhile;
                            wp_reset_postdata();
                            ?>
                        </div>
                    </div>
                <?php endif; ?>
            </div>
        <?php endif; ?>
    </div>
</div>